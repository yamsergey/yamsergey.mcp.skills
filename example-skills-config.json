{
  "skills_paths": [
    {
      "nickname": "user",
      "path": "~/.claude/skills",
      "readonly": true
    },
    {
      "nickname": "project",
      "path": "./.claude/skills",
      "readonly": false,
      "exclude_pattern": ".*_deprecated$|.*_experimental$"
    },
    {
      "nickname": "team",
      "path": "~/shared-team-skills",
      "readonly": false
    },
    {
      "nickname": "templates",
      "path": "/opt/skill-templates",
      "readonly": true
    },
    {
      "nickname": "security",
      "path": "~/shared-skills",
      "readonly": true,
      "pattern": "^security_.*"
    },
    {
      "nickname": "devops",
      "path": "~/shared-skills",
      "readonly": true,
      "pattern": "^devops_.*",
      "exclude_pattern": ".*_deprecated$"
    }
  ]
}
